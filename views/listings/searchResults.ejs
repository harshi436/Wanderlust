

<% layout("layouts/boilerplate.ejs") %>

<h1 class="mt-3 mb-3">Listings in <%= country %></h1>

<% if (listings.length === 0) { %>
  <p>No listings found for <%= country %>.</p>
<% } else { %>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% listings.forEach(listing => { %>
      <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
        <div class="card col listing-card" style="width:20rem; margin-bottom: 1rem;">
          <img src="<%= listing.image.url || '/images/default.jpg' %>" 
               class="card-img-top" 
               alt="listing_image" 
               style="height:20rem; object-fit:cover;"/>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br/>
              &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
<% } %>
